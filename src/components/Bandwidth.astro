---
const hardcodedBandwidth = '100 Mbps';
import { LineShadowText } from "./magicui/line-shadow-text";
---

<h1 class="text-balance text-5xl font-semibold leading-none tracking-tighter sm:text-6xl md:text-7xl lg:text-8xl">
  Bandwidth:
  <LineShadowText id="line-shadow-text" className="italic" shadowColor="black">
    100 Mbps
  </LineShadowText>
</h1>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const theme = localStorage.getItem("theme") || "light";
    const shadowColor = theme === "dark" ? "white" : "black";
    const lineShadowText = document.getElementById('line-shadow-text');
    lineShadowText.setAttribute('shadowColor', shadowColor);
  });
</script>