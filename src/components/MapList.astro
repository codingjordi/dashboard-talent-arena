---
import { Icon } from "astro-icon/components";
---

<div id="accordion-collapse" data-accordion="collapse" class="mt-10">
  <h2 id="accordion-collapse-heading-1">
    <button
      type="button"
      class="flex cursor-pointer items-center justify-between w-full p-5 font-medium rtl:text-right text-gray-500 border border-b-0 border-gray-200 rounded-t-xl focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-800 dark:border-gray-700 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 gap-3"
      data-accordion-target="#accordion-collapse-body-1"
      aria-expanded="true"
      aria-controls="accordion-collapse-body-1"
    >
      <div class="flex items-center gap-2">
        <Icon name="map" class="w-8 h-8" />
        <span>Maps</span>
      </div>
      <Icon
        name="chevron"
        data-accordion-icon
        class="w-4 h-4 rotate-180 ease-in-out transition"
      />
    </button>
  </h2>
  <div
    id="accordion-collapse-body-1"
    class="hidden transition ease-in-out duration-300"
    aria-labelledby="accordion-collapse-heading-1"
  >
    <ul class="flex flex-col items-start border-1 rounded-b-2xl">
      <li class="border-b-1 w-full py-4 pl-5 cursor-pointer">Talent Arena</li>
      <li class="border-b-1 w-full py-4 pl-5 cursor-pointer">Barcelona Fira</li>
    </ul>
  </div>
  <button
    class="border-1 rounded-md w-full hover:border-white cursor-pointer ease-in-out transition py-4 mt-10"
  >
    + Add new
  </button>
</div>
