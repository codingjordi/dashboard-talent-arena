---
interface Props {
    name: string;
    status: string;
    icon: string;
}
const { name, icon, status } = Astro.props;

import { Icon } from "astro-icon/components";
---

<div class={`border-1 rounded-2xl flex w-96 p-4 gap-6 ${status === 'Danger' ? 'border-red-500' : status === 'Authorized' ? 'border-yellow-500' : 'border-gray-300'}`}>
    <Icon name={icon} class={`text-4xl p-1.5 border-1 rounded-lg ${status === 'Danger' ? 'text-red-500 border-red-500' : status === 'Authorized' ? 'text-yellow-500 border-yellow-500' : 'text-gray-500 border-gray-300'}`} />
    <div class="flex flex-col ">
        <div class="text-xs font-bold">{name}</div>
        <div class="text-xl">{status}</div>
    </div>
</div>