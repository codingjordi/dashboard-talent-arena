---
import { Icon } from "astro-icon/components";
import { ScrollProgress } from "@/components/magicui/scroll-progress";
import ThemeSwitch from "./ThemeSwitch.astro";
import Sidebar from "@/components/Sidebar.astro";

const pathname = Astro.url.pathname;
const isHome = pathname.includes("about") || pathname.includes("contact") || pathname.includes("home");
---

<header
  class="p-2 md:p-0 border-b-1 border-solid sticky top-0 z-50 w-full flex items-center justify-center backdrop-blur-md"
>
  <Icon name="menu" class="text-5xl font-thin md:hidden cursor-pointer" id="menu"/>
  <nav class="container flex items-center  justify-between px-6 py-4">
    <a class="flex items-center gap-2" href="/home">
      <Icon name="net" class="md:text-6xl text-co1" />
      <p class="font-extrabold md:text-3xl">Opertator</p>
    </a>

    <div class="flex items-center gap-8">
      <ul class={`hidden ${!isHome ? 'hidden' : 'md:flex'} gap-4 items-center`}>
        <li>
          <a href="/about" class="font-bold text-lg">About</a>
        </li>
        <li>
          <a href="/contact" class="font-bold text-lg">Contact</a>
        </li>
      </ul>

      <ul class={`hidden ${isHome ? 'hidden' : 'md:flex'} gap-4 items-center`}>
        <li>
          <a href="/" class="font-bold text-lg">Dashboard</a>
        </li>
        <li>
          <a href="/about" class="font-bold text-lg">Zones</a>
        </li>
        <li>
          <a href="/contact" class="font-bold text-lg">Profiles</a>
        </li>
      </ul>
    <div class="flex gap-4">
    <div class='flex gap-4'>
      <a href='/' type="button" class=`${isHome ? 'block' : 'hidden'} text-white bg-gradient-to-r from-purple-500 to-pink-500 hover:bg-gradient-to-l focus:ring-4 focus:outline-none focus:ring-purple-200 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center`>
      Log In
      </a>
      <a
        href="/home"
        type="button"
        class=`${isHome ? 'hidden' : 'block'} text-white bg-gradient-to-r from-purple-500 to-pink-500 hover:bg-gradient-to-l focus:ring-4 focus:outline-none focus:ring-purple-200 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center`
      >
        Log Out
      </a>
      <ThemeSwitch />
    </div>
  </div>

  </nav>
</header>
<Sidebar />

<ScrollProgress client:load />