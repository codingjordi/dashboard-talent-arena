---
import { Icon } from "astro-icon/components";
import {ScrollProgress} from "@/components/magicui/scroll-progress";
import ThemeSwitch from "./ThemeSwitch.astro";
---

<header
  class="bg-white/80 dark:bg-black/80 p-2 md:p-0 border-b-1 border-solid sticky top-0 z-50 w-full flex items-center justify-center backdrop-blur-md"
>
  <Icon name="menu" class="text-5xl font-thin md:hidden" />
  <nav class="container flex items-center justify-between px-6 py-4">
    <div class="flex items-center gap-2">
      <Icon name="net" class="text-6xl text-co1" />
      <p class="font-extrabold text-3xl">Opertator</p>
    </div>
    <ul class="hidden md:flex gap-4">
      <li>
        <a href="/" class="font-bold text-lg">Dashboard</a>
      </li>
      <li>
        <a href="/about" class="font-bold text-lg">Zone</a>
      </li>
      <li>
        <a href="/contact" class="font-bold text-lg">Profiles</a>
      </li>
     
    </ul>
    <div class='flex gap-4'>
      <button type="button" class="text-white bg-gradient-to-r from-purple-500 to-pink-500 hover:bg-gradient-to-l focus:ring-4 focus:outline-none focus:ring-purple-200 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
      Log In
      </button>
      <ThemeSwitch />
    </div>
  </nav>

</header>
<ScrollProgress client:load/>