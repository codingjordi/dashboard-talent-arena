---
interface Props {
  title: string;
  api: string;
  features: string[];
}

const { title, api, features } = Astro.props as Props;
---

<div class="bg-gray-700 px-12 py-5 rounded-xl">
  <li class="text-2xl md:text-3xl -mb-2">
    {title} 
    <span class="hidden md:inline text-gray-400 text-sm">(via {api})</span>
  </li>
  <span class="text-gray-400 text-[12px] md:hidden">(via {api})</span>
  
  <ul class="list-disc mt-1">
    {features.map((feature) => (
      <li>{feature}</li>
    ))}
  </ul>
</div>
