---
interface Props {
    title: string;
    titleClass?: string;  // Nueva propiedad para las clases del t√≠tulo
    api?: string;
    features: string[];
  }
  
  const { title, titleClass, api, features } = Astro.props as Props;
---
  
  <div class="bg-gray-700 w-full px-12 py-5 rounded-xl h-full">
    <li class={`text-2xl md:text-3xl -mb-2 sm:-mb-1 ${titleClass || ""}`}>
      {title}
    </li>
    {api && <span class="text-gray-400 text-[12px] sm:text-sm">{`(${api})`}</span>}
    
    <ul class="list-disc mt-3 flex flex-col gap-1">
      {features.map((feature) => (
        <li>{feature}</li>
      ))}
    </ul>
  </div>
  